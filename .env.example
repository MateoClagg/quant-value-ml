# EODHD API Configuration
# Get your API key from: https://eodhd.com/cp/settings/api
EODHD_API_KEY=your_api_key_here

# API Rate Limits (your plan: $100/month All-In-One)
# 100,000 requests/day, 1,000 requests/minute
EODHD_RATE_LIMIT_PER_MINUTE=1000
EODHD_RATE_LIMIT_PER_DAY=100000

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your-new-bucket-name

# S3 Path Structure (optional customization)
S3_PREFIX=stock-data
# Results in: s3://your-bucket/stock-data/prices/...

# Data Configuration
START_DATE=2005-01-01  # 20 years of history
TICKERS_FILE=config/tickers.txt

# DuckDB Configuration
DUCKDB_PATH=data/stocks.duckdb
DUCKDB_MEMORY_LIMIT=8GB  # Adjust based on your machine
DUCKDB_THREADS=4         # Parallel query execution

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
